$(function() {
    $.getJSON('js/cvdata.json', function(info, textStatus) {
	console.log(info);
	$(jQuery.parseJSON(JSON.stringify(info))).each(function() {  
	    var what	  =	this.exp.what;
	    var where	  =	this.exp.where;
	    var place	  =	this.exp.place;
	    var date      =     this.exp.date;
	    var image     =     this.exp.image;
	    
	    $('#exp').append('<div class="grid_12"><div class="cv-job"><div class="grid_9"><p class="cv-position">' + what + '<span> en ' + where + '</span></p><p class="cv-place">' + place + '</p><p class="cv-date">' + date + '</p></div><div class="grid_3 omega"><img src="/images/jobs/' + image + '" alt="Coderise" class="cv-image" width="auto"></div></div></div>');
	});
    });
});
